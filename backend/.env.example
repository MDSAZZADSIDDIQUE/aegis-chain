# ── Elastic Cloud Serverless ──────────────────────────────────────────
ELASTIC_CLOUD_ID=your-deployment:dXMtY2VudHJhbC0xLmdjcC5jbG91ZC5lcy5pbzo0NDMk...
ELASTIC_API_KEY=your_base64_encoded_api_key
ELASTIC_URL=https://your-deployment.es.us-central1.gcp.cloud.es.io:443

# ── NOAA National Weather Service ─────────────────────────────────────
# No API key required — public endpoint.
# User-Agent header required per NOAA policy.
NOAA_USER_AGENT=AegisChain/1.0 (contact@aegischain.dev)

# ── NASA FIRMS (Fire Information for Resource Management System) ──────
NASA_FIRMS_MAP_KEY=your_nasa_firms_map_key

# ── Mapbox ────────────────────────────────────────────────────────────
MAPBOX_ACCESS_TOKEN=pk.your_mapbox_public_token
MAPBOX_SECRET_TOKEN=sk.your_mapbox_secret_token

# ── AegisChain API Authentication ────────────────────────────────────
# All endpoints except GET /health and POST /slack/actions require this key
# in the X-AegisChain-Key request header.
# Leave empty to disable authentication (local development only).
AEGIS_API_KEY=

# ── Slack HITL Webhook ────────────────────────────────────────────────
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXXXXXX
SLACK_SIGNING_SECRET=your_slack_signing_secret

# ── Application Config ────────────────────────────────────────────────
HITL_COST_THRESHOLD_USD=50000
POLL_INTERVAL_SECONDS=300
RL_PENALTY_FACTOR=0.05
RL_REWARD_FACTOR=0.02
LOG_LEVEL=INFO
