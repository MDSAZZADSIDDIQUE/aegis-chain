{
  "settings": {
    "number_of_shards":   1,
    "number_of_replicas": 0
  },
  "mappings": {
    "dynamic": "strict",
    "properties": {
      "@timestamp": {
        "type": "date",
        "meta": { "description": "Wall-clock time the event was received by AegisChain." }
      },
      "event_type": {
        "type": "keyword",
        "meta": { "description": "e.g. reroute_executed | approval_received | rejection_received" }
      },
      "proposal_id": {
        "type": "keyword"
      },
      "threat_id": {
        "type": "keyword"
      },
      "source": {
        "type": "keyword",
        "meta": { "description": "Caller identity â€” elastic_workflow | manual | test" }
      },
      "payload": {
        "type":    "object",
        "dynamic": true,
        "meta":    { "description": "Raw request body forwarded by the Elastic Workflow notify_dashboard step." }
      }
    }
  }
}
